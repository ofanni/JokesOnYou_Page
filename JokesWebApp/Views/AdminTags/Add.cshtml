@model JokesWebApp.Models.ViewModels.AddJokeRequest

<div class="bg-secondary bg-opacity-10 py-2">
    <div class="container">
        <h1>
            Add a new Joke
        </h1>
    </div>
</div>
<div class="container py-5">
    <form method="post">
        <div class="mb-3">
            <label class="form-label">Question</label>
            <input type="text" class="form-control" id="jokequestion" asp-for="JokeQuestion"/>
        </div>

        <div class="mb-3">
            <label class="form-label">Answer</label>
            <input type="text" class="form-control" id="jokeanswer" asp-for="JokeAnswer"/>
        </div>
        <div class="mb-3">
            <button type="submit" class="btn btn-dark">Submit</button>
        </div>
        
    </form>
</div>
